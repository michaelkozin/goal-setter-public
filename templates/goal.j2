{% extends 'index.j2' %}
{% block title %} Goals {% endblock %}
{% block content %}
    <h1>Long Term Goal Setting Tool</h1>
    <h2>{{ user_name }}</h2>
    <section id = "goals">
        <table class="table table-hover table-striped">
            <tr>
                <th>id</th>
                <th>description</th>
                <th>start</th>
                <th>end</th>
            </tr>
            <tr>
                <td>{{ id }}</td>
                <td>{{ description }}</td>
                <td>{{ start }}</td>
                <td>{{ end }}</td>
            </tr>
        </table>
    </section>

{% endblock %}
